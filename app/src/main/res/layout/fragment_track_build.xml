<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.atlas.mars.glidecon.store.MapBoxStore.ROUTE_TYPE"/>
        <variable
            name="fragmentTrackBuild"
            type="com.atlas.mars.glidecon.fragment.FragmentTrackBuild" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_margin="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:onClick="@{(view)->fragmentTrackBuild.onClickRouteType(ROUTE_TYPE.LINEAR)}"
                android:background="@{fragmentTrackBuild.routeType == 0 ? fragmentTrackBuild.buttonColor : 0}"
                app:srcCompat="@drawable/ic_route_line"
                />

            <ImageView
                android:layout_margin="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:onClick="@{(view)->fragmentTrackBuild.onClickRouteType(ROUTE_TYPE.ROUTE)}"
                android:background="@{fragmentTrackBuild.routeType == 1 ? fragmentTrackBuild.buttonColor : 0}"
                app:srcCompat="@drawable/ic_track_build"
                 />

            <ImageView
                android:layout_width="33dp"
                android:padding="5dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:onClick="@{(view)->fragmentTrackBuild.onClickClose()}"
                app:srcCompat="@drawable/ic_close" />

        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
