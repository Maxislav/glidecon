<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextStyle" parent="AppTheme">
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="editTextStyle">
        <item name="android:textSize">
            18dp
        </item>
        <item name="android:padding">
            10dp
        </item>
        <item name="android:background">
            @drawable/text_field_background
        </item>
    </style>
    <style name="textStyleHistory">
        <item name="android:layout_marginLeft">
            10dp
        </item>
        <item name="android:textColor">
            @color/blackColor
        </item>
        <item name="android:layout_width">
            match_parent
        </item>
        <item name="android:layout_height">
            wrap_content
        </item>
        <item name="android:layout_weight">
            1
        </item>
        <item name="android:textSize">
            16dp
        </item>

    </style>

</resources>
